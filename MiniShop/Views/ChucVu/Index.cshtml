@{
    ViewData["title"] = "Chức Vụ";
}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách Chức Vụ</h6>
            <a asp-action="Upsert" class="btn btn-primary ml-auto">Tạo Chức Vụ</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Chức Vụ</th>
                            <th>Tên Chức Vụ</th>
                            <th>Lương</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã Chức Vụ</th>
                            <th>Tên Chức Vụ</th>
                            <th>Lương</th>
                            <th>Hành động</th>
                        </tr>
                    </tfoot>

                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="EditModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="EditModalLabel">Chỉnh sửa Chức Vụ</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="updateChucvuForm" onsubmit="return false">
                        <div class="row align-items-center">
                            <div class="col-md-7 offset-md-2">
                                <div hidden class="form-group">
                                    <label>Mã chức vụ</label>
                                    <input type="text" class="form-control" id="ma_chuc_vu_old" />
                                </div>
                                <div class="form-group">
                                    <label>Mã Chức Vụ</label>
                                    <input type="text" class="form-control" id="ma_chuc_vu" />
                                </div>
                                <div class="form-group">
                                    <label>Tên Chức Vụ</label>
                                    <input type="text" class="form-control" id="ten_chuc_vu" />
                                </div>
                                <div class="form-group">
                                    <label>Lương</label>
                                    <input type="number" class="form-control" id="luong" />
                                </div>
                                <input id="updateform" data-dismiss="modal" type="submit" value="Cập nhập" class="btn btn-outline-secondary form-control" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/js/build/toastr.min.js"></script>
    <script src="~/js/chucvu.js"></script>

}
@section csss{
    <link href="~/js/build/toastr.css" rel="stylesheet" />

}
