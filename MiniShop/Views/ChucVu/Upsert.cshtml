
@{
    ViewData["Title"] = "Upsert";
}

<h2>Tạo chức vụ</h2>
<form asp-action="Upsert">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row align-items-center">
        <div class="col-md-7 offset-md-2">
            <div class="form-group">
                <label>Mã Chức Vụ</label>
                <input type="text" class="form-control" name="ma_chuc_vu" />
            </div>
            <div class="form-group">
                <label>Tên Chức Vụ</label>
                <input type="text" class="form-control" name="ten_chuc_vu" />
            </div>
            <div class="form-group">
                <label>Lương</label>
                <input type="number" class="form-control" name="luong" />
            </div>
            <input type="submit" value="Khởi tạo" class="btn btn-outline-secondary form-control" />
        </div>
    </div>
</form>

