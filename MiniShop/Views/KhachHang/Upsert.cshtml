
@{
    ViewData["Title"] = "Upsert";
}
<h2>Thêm khách hàng</h2>
<form asp-action="Upsert">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row align-items-center">
        <div class="col-md-7 offset-md-2">
            <div class="form-group">
                <label>Tên khách hàng</label>
                <input type="text" class="form-control" name="tkh" />
            </div>
            <div class="form-group">
                <label>Ngày sinh</label>
                <input type="date" class="form-control" name="ns" />
            </div>
            <div class="form-group">
                <label>CMND </label>
                <input type="text" class="form-control" name="cmnd" />
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <input type="text" class="form-control" name="sdt" />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" name="dc" />
            </div>
            <div class="form-group">
                <label>Giới tính</label>
                <select class="form-control" name="gt">
                    <option value="nam">Nam</option>
                    <option value="nu">Nữ</option>
                </select>
            </div>
            <div class="form-group">
                <label>Loại khách hàng</label>
                <select class="form-control" name="lkh" asp-items="ViewBag.LKH">
                    
                </select>
                
            </div>
            <input type="submit" value="Khởi tạo" class="btn btn-outline-secondary form-control" />
        </div>
    </div>
</form>