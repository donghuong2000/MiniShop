
@{
    ViewData["Title"] = "Upsert";
}

<h2>Tạo Loại Khách Hàng</h2>
<form asp-action="Upsert">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row align-items-center">
        <div class="col-md-7 offset-md-2">
            <div class="form-group">
                <label>Mã Loại Khách Hàng</label>
                <input type="text" class="form-control" name="ma_loai_khach_hang" />
            </div>
            <div class="form-group">
                <label>Tên Loại Khách Hàng</label>
                <input type="text" class="form-control" name="ten_loai_khach_hang" />
            </div>
            
            <input type="submit" value="Khởi tạo" class="btn btn-outline-secondary form-control" />
        </div>
    </div>
</form>

