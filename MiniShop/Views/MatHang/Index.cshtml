@{
    ViewData["title"] = "Sản Phẩm";
}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách Sản Phẩm</h6>
            <a asp-action="Create" class="btn btn-primary ml-auto">Tạo Sản Phẩm</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã mặt hàng</th>
                            <th>Tên mặt hàng</th>
                            <th>Ngày sản xuất</th>
                            <th>Hạn sử dụng</th>
                            <th>Giá</th>
                            <th>Loại</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã mặt hàng</th>
                            <th>Tên mặt hàng</th>
                            <th>Ngày sản xuất</th>
                            <th>Hạn sử dụng</th>
                            <th>Giá</th>
                            <th>Loại</th>
                            <th>Hành động</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- pop up update-->
    <div class="modal  fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="EditModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="EditModalLabel">Chỉnh sửa Nhân viên</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="Create">
                        <div class="row align-items-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label>Mã Mặt Hàng</label>
                                <input type="text" class="form-control" id="a" />
                            </div>
                            <div class="form-group">
                                <label>Tên Mặt Hàng</label>
                                <input type="text" class="form-control" id="b" />
                            </div>
                            <div class="form-group">
                                <label>Ngày Sản Xuất</label>
                                <input type="date" class="form-control" id="c" />
                            </div>
                            <div class="form-group">
                                <label>Ngày Hết Hạn</label>
                                <input type="date" class="form-control" id="d" />
                            </div>
                            <div class="form-group">
                                <label>Giá</label>
                                <input type="text" class="form-control" id="f" />
                            </div>
                            <div class="form-group">
                                <label>Loại Mặt Hàng</label>
                                <select asp-items="ViewBag.PhanLoaiList" class="form-control" name="e"></select>
                            </div>
                            <input value="Khởi Tạo" class="btn btn-outline-secondary form-control" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/js/build/toastr.min.js"></script>
    <script src="~/js/mathang.js"></script>

}
@section csss{
    <link href="~/js/build/toastr.css" rel="stylesheet" />

}


