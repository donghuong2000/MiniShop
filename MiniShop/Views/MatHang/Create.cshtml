
@{
    ViewData["Title"] = "Create";
}

    <form asp-action="Create">
        <div class="row align-items-center">
            <div class="col-md-7 offset-md-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label>Mã Mặt Hàng</label>
                    <input type="text" class="form-control" name="a" />
                </div>
                <div class="form-group">
                    <label>Tên Mặt Hàng</label>
                    <input type="text" class="form-control" name="b" />
                </div>
                <div class="form-group">
                    <label>Ngày Sản Xuất</label>
                    <input type="date" class="form-control" name="c" />
                </div>
                <div class="form-group">
                    <label>Ngày Hết Hạn</label>
                    <input type="date" class="form-control" name="d" />
                </div>
                <div class="form-group">
                    <label>Giá</label>
                    <input type="text" class="form-control" name="f" />
                </div>
                <div class="form-group">
                    <label>Loại Mặt Hàng</label>
                    <select asp-items="ViewBag.PhanLoaiList" class="form-control" name="e"></select>
                </div>
                <input value="Khởi Tạo" type="submit" class="btn btn-outline-secondary form-control" />
            </div>
            
        </div>
    </form>


