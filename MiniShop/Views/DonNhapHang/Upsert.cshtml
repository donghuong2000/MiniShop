
@{
    ViewData["Title"] = "Upsert";
}

<h2>Tạo Đơn Nhập Hàng</h2>
<form method="post" asp-action="Upsert" class="mx-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row ">
        <div class="col-md-6">
            <div class="form-group">
                <label>Mã Đơn Nhập Hàng</label>
                <input type="text" readonly class="form-control" name="ma_don_nhap_hang" value=@Guid.NewGuid() />
            </div>
            <div class="form-group">
                <label>Ngày Nhập</label>
                <input readonly type="date" class="form-control" name="ngay_nhap" value=@ViewBag.Date />

            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Mã Nhà Cung Cấp</label>
                <select asp-items="@ViewBag.ListNhaCungCap" class="form-control" name="nha_cung_cap">
                </select>
                <small>Vui lòng chọn nhà cung cấp cho đơn nhập hàng</small>
            </div>
        </div>
        <div class="container">
            <div class="row clearfix">
                <div class="col-md-12">
                    <table class="table table-bordered table-hover" id="tab_logic">
                        <thead>
                            <tr>
                                <th class="text-center"> STT</th>
                                <th class="text-center"> Mã Mặt Hàng</th>
                                <th class="text-center"> Số lượng</th>
                            </tr>
                        </thead>
                        <tbody id="tableproduct">
                            <tr id='addr0'>
                                <td>1</td>
                                <td>
                                    <select name='product[]' class="form-control select-product" asp-items="ViewBag.MatHang">
                                        <option value="">Chọn sản phẩm</option>
                                    </select>
                                </td>
                                <td><input type="number" name='qty[]' placeholder='Nhập số lượng' class="form-control qty" step="0" min="0" value="0" /></td>
                            </tr>
                            <tr id='addr1'></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-md-12">
                    <a id="add_row" class="btn btn-primary ">Add Row</a>
                    <a id='delete_row' class=" btn btn-danger">Delete Row</a>
                </div>
            </div>
        <input type="submit" value="Tạo Đơn Nhập Hàng" class="btn btn-outline-secondary form-control" />
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/js/build/toastr.min.js"></script>
    <script src="~/js/donnhaphangcal.js"></script>
}
@section csss{
    <link href="~/js/build/toastr.css" rel="stylesheet" />

}
