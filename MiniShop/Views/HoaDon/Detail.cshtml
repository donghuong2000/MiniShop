<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="invoice-title">
                <h2>HÓA ĐƠN #</h2><h3 class="pull-right" id="hoadonid">@ViewBag.HoaDonId</h3>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <address>
                        <strong>Nhân viên lập:</strong><br>
                        <span id="staffid"></span><br />
                        <span id="staffname"></span><br />
                    </address>
                </div>
                <div class="col-md-6 text-right">
                    <address>
                        <strong>Người Mua:</strong><br>
                        <span id="customerid"></span><br />
                        <span id="customername"></span><br />
                    </address>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
